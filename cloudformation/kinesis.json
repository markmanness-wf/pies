{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "My service stack for testing",
  "Parameters": {
    "StreamName": {
      "Description": "Name of stream",
      "Type": "String",
      "Default": ""
    },
    "NumberOfShards": {
      "Description": "Number of shards for the stream",
      "Type": "Number"
    }
  },
  "Conditions": {
    "SetStreamName": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "StreamName" }, "" ] } ] }
  },
  "Resources": {
    "MMMTestKinesis": {
      "Type" : "AWS::Kinesis::Stream",
      "Properties" : {
        "Name": { "Fn::If": [ "SetStreamName", { "Ref": "StreamName" }, { "Ref": "AWS::NoValue" } ] },
        "ShardCount": { "Ref": "NumberOfShards" },
        "Tags": [
          { "Key": "Service", "Value": "Harbour" },
          { "Key": "Owner", "Value": "InfEng" },
          { "Key": "Purpose", "Value": "Mark Manness test CF stream" },
          { "Key": "Business-Unit", "Value": "INFRE" },
          { "Key": "Role", "Value": "Dev"}
        ]
      }
    }     
  }
}
