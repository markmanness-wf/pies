{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "My service stack",
  "Parameters": {
    "NumberOfShards": {
      "Description": "Number of shards for the stream",
      "Type": "Number"
    }
  },
  "Resources": {
    "MMMTestKinesis": {
      "Type" : "AWS::Kinesis::Stream",
      "Properties" : {
        "Name": "mmm-test-cf-kinesis",
        "ShardCount": { "Ref": "NumberOfShards" },
        "Tags": [
          { "Key": "Service", "Value": "Harbour" },
          { "Key": "Owner", "Value": "InfEng" },
          { "Key": "Purpose", "Value": "Mark Manness test stream" },
          { "Key": "Business-Unit", "Value": "INFRE" },
          { "Key": "Role", "Value": "Dev"}
        ]
      }
    }     
  }
}
